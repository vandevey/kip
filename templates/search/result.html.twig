{% extends "base.html.twig" %}
{% block body %}
    <div class="container">
        <div class="center-column">
            <div class="page-content">
                <a href="{{ path('knowledge_read_home') }}">Back to files</a>
                <h1>Results</h1>
                <table>
                    <thead>
                    <tr>
                        <th>File</th>
                        <th>Path</th>
                        <th>preview</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for result in results %}

                        <tr>
                            <td>
                                <a href="{{ path('knowledge_read',{path: result.path}) }}"
                                   class="list-group-item">{{ result.name }}</a>
                            </td>
                            <td>
                                {{ result.path }}
                            </td>
                            <td></td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}